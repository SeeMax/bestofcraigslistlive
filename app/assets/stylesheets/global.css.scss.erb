@import "variables.css.scss" , "mixins.css.scss";

html{
  height: 100%;
  width:100%;
}

body {
  font-family: 'ralewaylight', Sans-Serif;
  position:relative;
  width:100%;
  height: 100%;
}

.page {
  height:auto;
}

.rowbox {
  width:90%;
  margin:0 auto;
  background:$lightBlue;
}

.content {
  width:100%;
  position:relative;
  background:$darkBlue;
  height:100%;
  @include transition;
}

.header {
  position:fixed;
  top:0;
  z-index:-1;
}

h1 {
  font-family: 'ralewayheavy', Sans-Serif;
  letter-spacing:1px;
}

.col {
   height:auto;
   min-height:175px;
}

.live_header, .video_header {
  width:50%;
  display:inline-block;

  img {
    width:100%;
  }
}

@media screen and (min-width: 0px) and (max-width: 479px) {
  h1 {
    font-size:40px;
  }

  .live_header, .video_header {
    width:100%;
    display:inline-block;
  }
}

@media screen and (min-width: 480px) and (max-width: 959px) {
  h1 {
    font-size:70px;
  }
}

@media screen and (min-width: 960px) {
  h1 {
    font-size:100px;
  }
}
