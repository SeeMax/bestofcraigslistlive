@import "variables.css.scss" , "mixins.css.scss";

html{
  height: 100%;
  width:100%;
}

body {
  font-family: 'open_sanscondensed_light', Sans-Serif;
  position:relative;
  width:100%;
  height: 100%;
  color:black;
  letter-spacing:2px;
}

a {
  text-decoration:none;
  color:white;
}

.page {
  height:auto;

}

.rowbox {
  width:90%;
  margin:0 auto;
  background:$lightBlue;
}

.nav {
  background:$mediumBlue;
  z-index:100;
  position:fixed;
  width:100%;


  ul {
    text-align:center;
    padding:7px 0;
  }

  li {
    display:inline-block;
    padding:0 7%;
  }
}

.logo {
  background:$mediumBlue;
  text-align:center;
  width:100%;
  height:auto;
  padding:5% 0 3% 0;
  position:fixed;
  z-index:1;
  top:0;

  img {
    width:40%;
    max-width:500px;
    min-width:250px;
  }
}

.content {
  width:100%;
  position:relative;
  background:$lightBlue;
  @include transition;
  z-index:2;
  border-top:1px $mediumBlue solid;
}

h1 {
  font-family: 'ralewayheavy', Sans-Serif;
  letter-spacing:1px;
}

.col {
   height:auto;
   min-height:175px;
   padding:2%;
}

.live_header, .video_header {
  width:50%;
  display:inline-block;
  position:relative;

  img {
    width:100%;
  }

  .words {
    color:white;
    opacity:.9;
    position:absolute;
    top:0;
    width:100%;
    height:100%;
    text-align:center;
    margin-top:20px;
  }
}

.video_header .words {
  .words {
    right:0;
  }
}

.live_header .words {
  left:0;
}

.button {
  opacity:.7;
  border:2px white solid;
  padding:10px 5px;
  width:25%;
  margin:25% auto 0 auto;
  @include transition;
}

.button:hover {
  opacity:1;
  border:4px white solid;
  margin:118px auto 0 auto;
}


@media screen and (min-width: 0px) and (max-width: 479px) {
  body {
    font-size:14px;
  }

  .logo {
    padding:12% 0 6% 0;
  }

  .live_header, .video_header {
    width:100%;
  }

  .button {
    width:50%;
  }

  h1 {
    font-size:60px;
  }
}

@media screen and (min-width: 480px) and (max-width: 573px) {
  body {
    font-size:10px;
  }

  .logo {
    padding:10% 0 4% 0;
  }

  .button {
    width:50%;
  }

  h1 {
    font-size:35px;
  }
}

@media screen and (min-width: 574px) and (max-width: 759px) {
  body {
    font-size:12px;
  }

  .logo {
    padding:7% 0 4% 0;
  }

  .button {
    width:40%;
  }

  h1 {
    font-size:44px;
  }
}


@media screen and (min-width: 760px) and (max-width: 959px) {
  body {
    font-size:14px;
  }

  .logo {
    padding:7% 0 4% 0;
  }

  .button {
    width:50%;
  }

  h1 {
    font-size:58px;
  }
}

@media screen and (min-width: 960px) {
  h1 {
    font-size:75px;
  }
}

@media screen and (min-width: 1350px) {
  body {
    font-size:18px;
  }

  h1 {
    font-size:100px;
  }
}
